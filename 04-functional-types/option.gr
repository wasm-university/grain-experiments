// Functional Types
import Option from "option"

let howManyThings = (numberOfThings) => {
  if(numberOfThings==0) {
    None
  } else {
    Some(numberOfThings)
  }
}

// you cannot use null or nil

let thingsNb = howManyThings(0)

if(Option.isNone(thingsNb)) {
  print("ğŸ˜¢ you gave me nothing")
} else {
  print("ğŸ¥° thank you, you gave me something:")
  print(Option.unwrap(thingsNb))
}

match (howManyThings(42)) {
    Some(numberOfThings) => {
      print("ğŸ¥° thank you, you gave me something:")
      print(numberOfThings)
    },
    None => print("ğŸ˜¢ you gave me nothing")
}
